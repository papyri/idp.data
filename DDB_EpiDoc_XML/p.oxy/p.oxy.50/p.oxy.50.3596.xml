    <lb n="26"/><gap reason="lost" atLeast="6" atMost="8" unit="character"/>τω<unclear>ν</unclear><gap reason="lost" quantity="1" unit="character"/><gap reason="illegible" quantity="1" unit="character"/><gap reason="lost" quantity="1" unit="character"/><gap reason="illegible" quantity="1" unit="character"/><gap reason="lost" quantity="5" unit="character"/><supplied reason="lost"> δρα</supplied><unclear>χ</unclear><supplied reason="lost">μὰς </supplied><gap reason="lost" quantity="2" unit="character"/>ακοσίας τεσσαράκοντα, 

