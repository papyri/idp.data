    <lb n="27" break="no"/>του</reg><orig>τεταρ<lb n="27" break="no"/>τον</orig></choice> τετρακαιεξηκ<supplied reason="lost">οστοῦ <num value="1"/><num value="1/2"/><num value="1/4"/><num value="1/64"/> σὺν τ</supplied>οῖς ἐνοῦσι πᾶσι, <supplied reason="lost">ὧν γείτονες</supplied> νότου <supplied reason="lost">Σ</supplied>τεφάν<supplied reason="lost">ου</supplied> 

    <lb n="28"/><gap reason="lost" quantity="2" unit="character"/>ο<gap reason="illegible" quantity="1" unit="character"/>τη<unclear>τ</unclear>ος τοῦ <gap reason="illegible" quantity="1" unit="character"/><gap reason="lost" quantity="5" unit="character"/><supplied reason="lost"> καὶ Θ</supplied>ατρῆς προκι<unclear>μ</unclear><supplied reason="lost">ένη Ἀπολλων</supplied>ίου βορρᾶ το<unclear>ῦ</unclear> <gap reason="lost" quantity="2" unit="character"/> 

    <lb n="29"/><gap reason="lost" quantity="2" unit="character"/><gap reason="illegible" quantity="3" unit="character"/><unclear>α</unclear>ρ<unclear>π</unclear>ου κα<supplied reason="lost">ὶ </supplied><gap reason="lost" quantity="9" unit="character"/><supplied reason="lost"> ἀπηλι</supplied>ώτου διῶρ<supplied reason="lost">υξ </supplied><gap reason="lost" quantity="6" unit="character"/><supplied reason="lost"> τῶ</supplied><unclear>ν</unclear> αὐτῶν κα<supplied reason="lost">ὶ</supplied> 

