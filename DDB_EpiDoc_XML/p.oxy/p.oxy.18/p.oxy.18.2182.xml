    <lb n="51"/><expan>Σεραπ<ex>ίωνος</ex></expan> <expan>Χαι<ex>ρήμονος</ex></expan> <expan>ἐπ<ex>οικίου</ex></expan>   <num value="5">ε</num> 

    <lb n="52"/><app type="editorial"><lem><expan>Σενέ<ex>πτα</ex></expan></lem><rdg><expan>Σενοπ<ex>ώθεως</ex></expan></rdg></app>     <num value="45">με</num> 

    <lb n="53"/><expan>Νεμερῶ<ex>ν</ex></expan>          <num value="18">ιη</num> 

    <lb n="54"/><expan>Παλώσεω<ex>ς</ex></expan>         <num value="23">κγ</num> 

    <lb n="55"/>Σιναρύ             <num value="12">ιβ</num> 

    <lb n="56"/><app type="editorial"><lem><expan>Ψώβθεω<ex>ς</ex></expan></lem><rdg><expan>Ψέ<unclear>μ</unclear>μεω<ex>ς</ex></expan></rdg></app>         <num value="9">θ</num> 

