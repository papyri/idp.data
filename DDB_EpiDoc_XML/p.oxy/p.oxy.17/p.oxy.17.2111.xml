    <lb n="29"/>τε ἄγχων ἀποπνιξα<gap reason="lost" extent="unknown" unit="character"/> 

    <lb n="30"/>ἔγκλημα ἀπέθετο κ<gap reason="lost" extent="unknown" unit="character"/> 

    <lb n="31"/>σα δὲ τῷ ἐγκλήματι <gap reason="lost" extent="unknown" unit="character"/> 

    <lb n="32"/>νόστον ἐσόμενον <gap reason="lost" extent="unknown" unit="character"/><supplied reason="lost"> ὑπη</supplied>

