    <lb n="4a"/><gap reason="lost" extent="unknown" unit="character"/><supplied reason="lost"> χρη</supplied>ματισθέντος δὲ αὐτοῖς καὶ εἰς ἕκαστον σφῆνα παρ<gap reason="lost" extent="unknown" unit="character"/> 

    <lb n="5"/><gap reason="lost" extent="unknown" unit="character"/> <app type="editorial"><lem resp="BL 1.349">ἐπακολουθείτω</lem><rdg>συνακολουθείτω</rdg></app> δέ τις παρὰ σοῦ τῆι ομ<gap reason="lost" extent="unknown" unit="character"/> 

    <lb n="6"/><gap reason="lost" extent="unknown" unit="character"/>ου επιδ<gap reason="illegible" quantity="1" unit="character"/>ν<gap reason="illegible" quantity="2" unit="character"/>τι αὐτοῖς διδο<gap reason="lost" extent="unknown" unit="character"/> 

