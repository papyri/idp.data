    <lb n="3"/>Διογένο<supplied reason="lost">υς το</supplied>ῦ <unclear>Διδύ</unclear>μου καὶ ὁ ταύ

    <lb n="4" break="no"/>της μὲν ἕ<supplied reason="lost">τερ</supplied>ος υἱός, τοῦ δὲ 

    <lb n="5"/>Διο<unclear>γ</unclear>ένου<unclear>ς</unclear> <supplied reason="lost">ἀδ</supplied><unclear>ε</unclear>λφός, Ἡρᾶς τοῦ αὐτοῦ 

    <lb n="6"/>Διδύμ<supplied reason="lost">ου γέρδιο</supplied>ς, ἡ μὲν Ἀπολλωνοῦς 

    <lb n="7"/>παρέξ<supplied reason="lost">εσθαι</supplied> τῶι Ἡρᾶτι τὸν <choice><reg>ἑαυτῆς</reg><orig>ἑατῆ<unclear>ς</unclear></orig></choice> 

    <lb n="8"/>θυγ<supplied reason="lost">ατριδοῦν</supplied> <gap reason="illegible" quantity="1" unit="character"/><unclear>ω</unclear>νιν τὸν καὶ Ἀ<unclear>γέ</unclear>λοχον 

    <lb n="9"/>Ἁρ<unclear>σ</unclear>ιήσι<unclear>ο</unclear><supplied reason="lost">ς οὐδ</supplied>έπω ὄντα τῶν ἐτῶν 

    <lb n="10"/>ἐπὶ χρόνον <choice><reg>ἔ<supplied reason="lost">τη</supplied></reg><orig>ἔ<supplied reason="lost">τη</supplied>ι</orig></choice> δύο <num value="2"/> ἀπὸ πέμπτης 

    <lb n="11"/>τοῦ <unclear>ἐ</unclear>νεστῶ<unclear>τ</unclear><supplied reason="lost">ος</supplied> μηνὸς Σεβαστοῦ 

    <lb n="12"/>ποιοῦντα <unclear>π</unclear><supplied reason="lost">άντα τ</supplied>ὰ ἐπιτασσόμενα αὐτῶι 

    <lb n="13"/>ὑπὸ τοῦ Ἡ<unclear>ρᾶ</unclear><supplied reason="lost">τος</supplied> κατὰ τὴν γερδιακὴν 

    <lb n="14"/>τέχνην ἥνπερ <unclear>καὶ</unclear> αὐτὸς ἐκδιδάξει 

    <lb n="15"/>τ<unclear>ο</unclear>ῦ<add place="above">τ<unclear>ον</unclear></add> καθὼς ἐπ<unclear>ί</unclear>στατ<unclear>α</unclear><supplied reason="lost">ι</supplied>, τοῦ παιδὸς 

    <lb n="16"/>τρεφομένου ἐπὶ τὸ<unclear>ν</unclear> προκίμενον 

    <lb n="17"/>χρόνον ὑπὸ τῆς Ἀπολλωνοῦτος 

    <lb n="18"/>ἀνθʼ ὧν χωρηγήσηι αὐτῆι ὁ Ἡρᾶς 

    <lb n="19"/>κατὰ μῆνα ἕκαστον <expan>ἀργ<ex>υρίου</ex></expan> <expan><ex>δραχμῶν</ex></expan> πέντε <num value="5"/>. 

    <lb n="20"/>ἡ δʼ <choice><reg>αὐτὴ</reg><orig>αὐτηι</orig></choice> Ἀπολλωνοῦς <choice><reg>ἱματιεῖ</reg><orig>ἱματεῖ</orig></choice> τὸν 

    <lb n="21"/>υἱὸν ἐπὶ τὰ δύο <num value="2"/> <choice><reg>ἔτη</reg><orig>ἔτηι</orig></choice> ἀνθʼ ὧν δώσει 

    <lb n="22"/>αὐτῆι ὁ Ἡρᾶς <expan>ἀργ<ex>υρίου</ex></expan> <expan><ex>δραχμῶν</ex></expan> <subst><add place="inline">εἴκοσι</add><del rend="corrected"><gap reason="illegible" quantity="1" unit="character"/>ικοσι</del></subst> τεσσάρων <num value="24"/>, 

    <lb n="23"/>ἀφʼ ὧν αὐτόθεν ὁμολογεῖ ἡ <expan>Ἀπολλωνο<ex>ῦς</ex></expan> 

    <lb n="24"/>ἐσχηκέναι παρὰ τοῦ Ἡρᾶτος δραχμὰ<add place="above">ς</add> 

    <lb n="25"/>δ<unclear>εκ</unclear>αδύο <num value="12"/>.  τὴν δὲ τῶν λοιπῶν 

    <lb n="26"/>εἰς <unclear>λ</unclear><supplied reason="lost">όγ</supplied><unclear>ο</unclear>ν ἱματι<unclear>σ</unclear>μοῦ δραχμῶν 

    <lb n="27"/>δεκαδύο <num value="12"/> <surplus>τὴν</surplus> <choice><reg>ἀπόδοσιν</reg><orig>ἀποδυσιν</orig></choice> <choice><reg>ποιείσθω</reg><orig>ποιείσθωι</orig></choice> 

    <lb n="28"/>ὁ Ἡρᾶς τῆι μητρὶ τῶι Σεβαστῶι 

    <lb n="29"/>μηνὶ τοῦ <choice><reg>εἰσιόντος</reg><orig>ἰσιόντος</orig></choice> ἔτους.  ἐὰν δὲ 

    <lb n="30"/>ὁ παῖς ἀπαιτηθῆι λαογραφίαν ἢ 

    <lb n="31"/>χωματικὸν ἢ ὑικὴν ἢ τῆς τέχνης 

    <lb n="32"/>δημόσια, ἔσται πρὸς τὸν Ἡρᾶν. 

    <lb n="33"/>ὅσας δʼ ἂν ὁ παῖς ἀτακτήσῃ ἡμέρας 

    <lb n="34"/>ἐπὶ τὰς ἴσας αὐτὸν παρέξεται ἡ Ἀπο<add place="above">λ</add>

    <lb n="35" break="no"/>λωνοῦς μετὰ τὸν χρόνον ἢ <choice><reg>ἐκτείσει</reg><orig>ἐκτίσι</orig></choice> ἑκάσ

    <lb n="36" break="no"/>της ἡμέρας <expan>ἀργ<ex>υρίου</ex></expan> <expan><ex>δραχμὴν</ex></expan> μίαν <num value="1"/>, τοῦ δʼ ἀποσ

    <lb n="37" break="no"/>πασθῆναι πρὸ τοῦ χρ<supplied reason="lost">ό</supplied>νου ἐπί<unclear>τι</unclear>μον 

    <lb n="38"/><expan>ἀργ<ex>υρίου</ex></expan> <expan><ex>δραχμὰς</ex></expan> ἑκ<unclear>α</unclear>τὸν <num value="100"/> κ<supplied reason="lost">αὶ</supplied> εἰς τὸ δ<unclear>ημ</unclear>όσιον τ<unclear>ὰς</unclear> ἴσας. 

    <lb n="39"/>ἐὰν δὲ καὶ αὐτ<unclear>ὸ</unclear><supplied reason="lost">ς ὁ</supplied> <unclear>Ἡρᾶς</unclear> <gap reason="illegible" quantity="4" unit="character"/><gap reason="illegible" quantity="4" unit="character"/> 

    <lb n="40"/>διδάξηι τὸν πα<unclear>ῖ</unclear>δα, <choice><reg>ἀποτεισάτω</reg><orig>ἀποτισάτωι</orig></choice> 

    <lb n="41"/>τὸ ἴ<unclear>σ</unclear>ον ἐπίτιμον, μὴ <choice><reg>ἐλαττουμένου</reg><orig>ἐλλαττουμένου</orig></choice> 

    <lb n="42"/>τοῦ <unclear>Ἡ</unclear>ρᾶτος καὶ Διογένους ἐν τῶι δικαίῳ 

    <lb n="43"/>οὗ <unclear>ἔχ</unclear>ουσι πρὸς <choice><reg>ἑαυτοὺς</reg><orig>ἑατοὺς</orig></choice> ὁμολογήματος 

    <lb n="44"/>ἐφʼ οἷς περιέχ<supplied reason="lost">ε</supplied>ι πᾶσι. κυρία ἡ χείρ. 

    <lb n="45"/><expan><ex>ἔτους</ex></expan> <num value="15">ιε</num> Τιβερίου Κ<unclear>λ</unclear><supplied reason="lost">α</supplied><unclear>υ</unclear>δίου Καίσαρος <expan>Σεβασ<ex>τοῦ</ex></expan> <expan>Γερμανι<ex>κοῦ</ex></expan> 

    <lb n="46"/>Αὐ<unclear>τ</unclear><supplied reason="lost">ο</supplied>κράτορος <expan>μη<ex>νὸς</ex></expan> <unclear>Σε</unclear><supplied reason="lost">βα</supplied>στοῦ <num value="11">ια</num>. <handShift new="m2"/> Ἀπολλωνοῦς 

    <lb n="47"/>Σαρ<supplied reason="lost">απί</supplied>ωνος <choice><reg>π<supplied reason="lost">αρ</supplied>έξομαι</reg><orig><unclear>π</unclear><supplied reason="lost">αρ</supplied>έξωμαι</orig></choice> τ<supplied reason="lost">ὸν θ</supplied>υγατρι<unclear>δοῦν</unclear> 

    <lb n="48"/>ἐπὶ τὰ <choice><reg>δύο</reg><orig>τύο</orig></choice> <num value="2"/> ἔτη <supplied reason="lost">καὶ</supplied> ποιήσω καθʼ ὅ τι πρόκιται. 

    <lb n="49"/><expan><ex>ἔτους</ex></expan> <num value="15">ιε</num>  <choice><reg>Τιβερίου</reg><orig>Τυβερίου</orig></choice> Κλα<supplied reason="lost">υδ</supplied>ίου Καίσαρος 

    <lb n="50"/>Σεβαστοῦ Γερμαν<supplied reason="lost">ικ</supplied>οῦ Αὐτοκράτορος 

